    <div class="col-sm-3">
      <%= link_to document, class: 'catalog-collection-thumb' do %>
        <% if CollectionAvatar.find_by(collection_id: document.id).nil? %>
          <span class="<%= Sufia::ModelIcon.css_class_for(Collection) %> collection-icon-search"></span>
        <% else %>
          <%= image_tag CollectionAvatar.find_by(collection_id: document.id).avatar.url(:thumb) %>
        <% end %>
      <% end %>
    </div>
